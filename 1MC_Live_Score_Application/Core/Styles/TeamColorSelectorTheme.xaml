<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <Style x:Key="TeamColorSelectorTheme" TargetType="xctk:ColorPicker">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="TextBlock.FontFamily" Value="{StaticResource Formula1FontStyle}"/>
        <Setter Property="DisplayColorAndName" Value="True"/>
        <Setter Property="AvailableColorsSortingMode" Value="HueSaturationBrightness"/>
        <Setter Property="Width" Value="50"/>
    </Style>

</ResourceDictionary>